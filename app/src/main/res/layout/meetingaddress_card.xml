<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="10dp"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:foreground="?android:selectableItemBackground">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="5dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Customer Name"
            android:id="@+id/customer_name_text"
            android:layout_marginLeft="5dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=":"
            android:id="@+id/customer_name_semi"
            android:layout_marginLeft="5dp"
            android:layout_alignTop="@+id/customer_name_text"
            android:layout_toRightOf="@+id/customer_name_text" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Text"
            android:textSize="16sp"
            android:textStyle="bold"
            android:id="@+id/customer_name"
            android:layout_marginLeft="5dp"
            android:layout_alignTop="@+id/customer_name_semi"
            android:layout_toRightOf="@+id/customer_name_semi" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mobile"
            android:id="@+id/customer_mobile_text"
            android:layout_marginTop="5dp"
            android:layout_below="@+id/customer_name_text"
            android:layout_alignLeft="@+id/customer_name_text" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=":"
            android:id="@+id/customer_mobile_semi"
            android:layout_marginLeft="5dp"
            android:layout_alignTop="@+id/customer_mobile_text"
            android:layout_toRightOf="@+id/customer_mobile_text" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Text"
            android:textSize="16sp"
            android:id="@+id/customer_mobile"
            android:layout_marginLeft="5dp"
            android:layout_alignTop="@+id/customer_mobile_semi"
            android:layout_toRightOf="@+id/customer_mobile_semi" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Address"
            android:id="@+id/customer_address_text"
            android:layout_marginTop="5dp"
            android:layout_below="@+id/customer_mobile_text"
            android:layout_alignLeft="@+id/customer_mobile_text" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=":"
            android:id="@+id/customer_address_semi"
            android:layout_marginLeft="5dp"
            android:layout_alignTop="@+id/customer_address_text"
            android:layout_toRightOf="@+id/customer_address_text" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Text"
            android:id="@+id/customer_address"
            android:layout_marginLeft="5dp"
            android:layout_alignTop="@+id/customer_address_semi"
            android:layout_toRightOf="@+id/customer_address_semi" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Meeting Date"
            android:id="@+id/meeting_date_text"
            android:layout_marginTop="5dp"
            android:layout_below="@+id/customer_address"
            android:layout_alignLeft="@+id/customer_address_text" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=":"
            android:id="@+id/meeting_date_semi"
            android:layout_marginLeft="5dp"
            android:layout_alignTop="@+id/meeting_date_text"
            android:layout_toRightOf="@+id/meeting_date_text" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Text"
            android:textSize="16sp"
            android:id="@+id/meeting_date"
            android:layout_marginLeft="5dp"
            android:layout_alignTop="@+id/meeting_date_semi"
            android:layout_toRightOf="@+id/meeting_date_semi" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Meeting Time"
            android:id="@+id/meeting_time_text"
            android:layout_marginTop="5dp"
            android:layout_below="@+id/meeting_date_text"
            android:layout_alignLeft="@+id/meeting_date_text" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=":"
            android:id="@+id/meeting_time_semi"
            android:layout_marginLeft="5dp"
            android:layout_alignTop="@+id/meeting_time_text"
            android:layout_toRightOf="@+id/meeting_time_text" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Text"
            android:textSize="16sp"
            android:id="@+id/meeting_time"
            android:layout_marginLeft="5dp"
            android:layout_alignTop="@+id/meeting_time_semi"
            android:layout_toRightOf="@+id/meeting_time_semi" />

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/chkSelected"
            android:layout_marginRight="5dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true" />
    </RelativeLayout>

</android.support.v7.widget.CardView>